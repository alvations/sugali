%\newcommand{\metatext}[2]{}
\newcommand{\metatext}[2]
 {\vspace{2mm}\noindent 
   \textbf{#1.}\hspace{2mm} \textit{#2}\vspace{2mm}}


\newcommand{\bluenote}[1]{\textcolor{blue}{[#1]}}
\newcommand{\bluetext}[1]{\textcolor{blue}{#1}}



%\newcommand{\metatexttwo}[2]{\textbf{#1.}\hspace{2mm} \marginpar{#2}}


\newcommand{\mycomment}[1]{\metatext{Comment}{#1}}
\newcommand{\apcomment}[1]{\metatext{Comment}{#1 \textbf{(Alexis)}}}
\newcommand{\afcomment}[1]{\metatext{Comment}{#1 \textbf{(Anne)}}}

%\newcommand{\commentfn}[2]{}
\newcommand{\commentfn}[2]{*\footnote{\textbf{#1}: #2}*}
\newcommand{\apfn}[1]{\commentfn{Alexis}{#1}}
\newcommand{\affn}[1]{\commentfn{Andrea}{#1}}

\newcommand{\tba}[1]{\metatext{To be added}{#1}}
\newcommand{\todo}[2]{\metatext{TODO}{#1 \textbf{(#2)}}}
\newcommand{\padd}[1]{\metatext{Please add}{#1}}

